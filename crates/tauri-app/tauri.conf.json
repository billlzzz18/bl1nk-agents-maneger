{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Gemini CLI Desktop",
  "version": "0.3.15",
  "identifier": "ai.piebald.gemini-cli-desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../../frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Gemini CLI Desktop",
        "width": 1280,
        "height": 730,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "plugins": {
    "sidecar": {
      "scripts": [
        {
          "name": "gemini-cli-desktop-web",
          "sidecar": ["../server/target/release/gemini-cli-desktop-web"]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb", "dmg", "rpm"],
    "category": "DeveloperTool",
    "publisher": "Piebald LLC",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
